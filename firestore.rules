rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    function isGrader() {
      return request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isGrader == true ||
        isAdmin()
      );
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null; // Allow authenticated users to read profiles (needed for admin/grader checks)
      allow write: if isAdmin(); // Only admins can create/edit users
    }

    // Questions (Read by students/graders, Write by admins)
    match /questions/{day} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Schedule
    match /schedule/{day} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Settings
    match /settings/{docId} {
      allow read: if true; // App settings need to be public for login checks sometimes, or at least auth'd
      allow write: if isAdmin();
    }

    // Active Tests (Students writing their own test session)
    match /activeTests/{testId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Submissions
    match /submissions/{submissionId} {
      // Students can create their submission
      allow create: if request.auth != null && request.resource.data.studentEmail == request.auth.token.email;
      
      // Students can read their own submissions
      allow read: if request.auth != null && (resource.data.studentEmail == request.auth.token.email || isGrader());
      
      // Graders can update grading fields
      allow update: if isGrader();
    }
  }
}
